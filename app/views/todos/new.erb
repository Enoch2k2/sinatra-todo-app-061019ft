<% if @errors %>
  <ul class="red">
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<h1>Create Todo</h1>

<form action="/todos" method="post">
  <div class="input-field">
    <input placeholder="Placeholder" name="todo[title]" id="title" type="text" class="validate">
    <label for="title">Title</label>
  </div>

  <p>
    <label>
      <input type="checkbox" name="todo[completed]" />
      <span>Completed</span>
    </label>
  </p>
  <input type="submit" value="Create Todo" class="btn">
</form>