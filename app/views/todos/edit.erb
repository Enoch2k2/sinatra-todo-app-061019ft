<% if @errors %>
  <ul class="red">
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<h1>Edit Todo</h1>

<form action="/todos/<%= @todo.id %>" method="post">
  <input type="hidden" value="patch" name="_method">
  <div class="input-field">
    <input placeholder="Placeholder" name="todo[title]" id="title" type="text" class="validate" value="<%= @todo.title %>">
    <label for="title">Title</label>
  </div>

  <p>
    <label>
      <input type="checkbox" name="todo[completed]" <%= 'checked' if @todo.completed %>/>
      <span>Completed</span>
    </label>
  </p>
  <input type="submit" value="Update Todo" class="btn">
</form>